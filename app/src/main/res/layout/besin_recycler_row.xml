<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
        name="besin"
        type="com.esracebi.besinlerkitabi.model.Besin" />
        <variable
            name="listener"
            type="com.esracebi.besinlerkitabi.adapter.BesinClickListener" />


    </data>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:onClick="@{listener::besinTiklandi"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/besin_uuid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="@{String.valueOf(besin.uuid)}"

            ></TextView>
        <ImageView
        android:id="@+id/imageView"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp" android:downloadImage="@{besin.besinGorsel}"
            >

        </ImageView>

         <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">
        <TextView
            android:id="@+id/isim"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="21sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{besin.besinIsim}">

        </TextView>
        <TextView
            android:id="@+id/kalori"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{besin.besinKalori}">

        </TextView>


    </LinearLayout>
</LinearLayout>
</layout>



